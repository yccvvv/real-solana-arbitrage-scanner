{
  "name": "solana-arbitrage-scanner",
  "version": "1.0.0",
  "description": "Real-time arbitrage opportunity detection system for Solana DEXs with live blockchain data integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "npx ts-node basic-integration-test.ts",
    "test:integration": "npx ts-node run-integration-tests.ts",
    "test:dex": "npx ts-node src/tests/integration-dex-clients.test.ts",
    "test:price": "npx ts-node src/tests/integration-price-aggregators.test.ts",
    "test:monitor": "npx ts-node src/tests/integration-onchain-monitoring.test.ts",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "solana",
    "arbitrage",
    "dex",
    "trading",
    "blockchain",
    "cryptocurrency",
    "real-time",
    "websocket",
    "defi"
  ],
  "author": "Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/username/solana-arbitrage-scanner.git"
  },
  "bugs": {
    "url": "https://github.com/username/solana-arbitrage-scanner/issues"
  },
  "homepage": "https://github.com/username/solana-arbitrage-scanner#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@solana/web3.js": "^1.87.6",
    "decimal.js": "^10.4.3",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/ws": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "optionalDependencies": {
    "@pythnetwork/client": "^2.19.0",
    "@switchboard-xyz/solana.js": "^0.1.21",
    "@raydium-io/raydium-sdk": "^1.3.1-beta.58",
    "@orca-so/sdk": "^1.4.3"
  },
  "peerDependencies": {
    "@solana/web3.js": "^1.87.0"
  }
}
